<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>spring-rest-api</artifactId>
        <groupId>com.alexshabanov.springrestapi</groupId>
        <version>1.0-ROOT-SNAPSHOT</version>
    </parent>

    <groupId>com.alexshabanov.springrestapi</groupId>
    <artifactId>client-app</artifactId>
    <version>${app.version}</version>
    <packaging>jar</packaging>
    <name>Client Application</name>

    <dependencies>
        <!-- App domain and common REST exposure modules -->
        <dependency>
            <groupId>com.alexshabanov.springrestapi</groupId>
            <artifactId>app-domain</artifactId>
        </dependency>
        <dependency>
            <groupId>com.alexshabanov.springrestapi</groupId>
            <artifactId>app-rest-common</artifactId>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-jdk14</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- Spring -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>${spring.version}</version>
        </dependency>

        <!-- CGLIB for @Configuration processing -->
        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
        </dependency>

        <!-- Jackson -->
        <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-core-asl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-mapper-asl</artifactId>
        </dependency>

        <!-- Tests -->
        <dependency>
            <groupId>com.alexshabanov.springrestapi</groupId>
            <artifactId>app-rest-provider</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.alexshabanov.springrestapi</groupId>
            <artifactId>rest-api-test</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- Servlet API -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>